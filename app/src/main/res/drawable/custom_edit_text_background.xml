<!-- custom_edit_text_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background when focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Set the focused background color -->
            <stroke android:width="2dp" android:color="@color/yellow" /> <!-- Set the focused border color and width -->
        </shape>
    </item>
    <!-- Default background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Set the default background color to transparent -->
            <stroke android:width="1dp" android:color="@android:color/transparent" /> <!-- Set the default border color and width -->
        </shape>
    </item>
</selector>
